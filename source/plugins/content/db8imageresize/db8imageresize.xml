						description="PLG_CONTENT_DB8IMAGERESIZE_LGW_DESC"
						label="PLG_CONTENT_DB8IMAGERESIZE_LGW_LABEL"
				/>
				<field
						name="lg_height"
						type="text"
						default="800"
						description="PLG_CONTENT_DB8IMAGERESIZE_LGH_DESC"
						label="PLG_CONTENT_DB8IMAGERESIZE_LGH_LABEL"
				/>

